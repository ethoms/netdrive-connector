Maintainer: Euan Thoms <euan@potensol.com>
pkgname=netdrive-connector
pkgver=1.3.1
pkgrel=1
pkgdesc="Utility to setup mountable SFTP and WebDAV connections on Linux/UNIX systems."
arch=('any')
url="https://github.com/ethoms/netdrive-connector"
license=('BSD-2-clause')
groups=()
depends=('python2'
         'python2-pyqt4'
         'openssh'
         'openssh-askpass'
         'sshfs'
         'davfs2'
         'expect')
makedepends=('python2-setuptools')
provides=()
conflicts=()
replaces=()
backup=()
options=(!emptydirs)
install=
source=(https://pypi.python.org/packages/source/n/netdrive-connector/$pkgname-$pkgver.tar.gz)
md5sums=(c86c46f492393e3b2c672ea68ebc903a)

package() {
  cd "$srcdir/$pkgname-$pkgver"
  python2 setup.py install --root="$pkgdir/" --optimize=1
}
